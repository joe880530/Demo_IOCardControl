<UserControl x:Class="Demo_IOCardControl.MyControl.UC_Combobox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo_IOCardControl.MyControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="30">
    <StackPanel x:Name="StackPanel_Main" Orientation="Horizontal">
        <Label x:Name="label_CategoryName" Content="Label" FontWeight="Bold" Foreground="White"/>
        <Grid x:Name="Grid_Split" Width="10"/>
        <ComboBox x:Name="ComboBox_Category"/>

    </StackPanel>
</UserControl>

<UserControl x:Class="JihoControl.UC_ComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JihoControl"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid x:Name="Grid_Main">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label_CategoryName" Content="Label" FontWeight="Bold" Foreground="White" Grid.ColumnSpan="1"/>
        <ComboBox x:Name="ComboBox_Category" Margin="0" Grid.Column="2" Grid.ColumnSpan="1"/>

    </Grid>
</UserControl>
